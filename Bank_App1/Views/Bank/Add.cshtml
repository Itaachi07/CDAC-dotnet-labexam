@model List<Bank_App1.Models.UserTb>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddAplicant </title>
    <link href="~/Content/bootstrap.rtl.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="row mt-3">
        <div class="col"> </div>
        <div class="col">
            <h1>Add new Banker</h1>
            <form action="/Bank/AfterAdd" method="post">
                <div class="form-group">
                    <label for="UserName">Banker Name</label>
                    <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Enter Your Name Here:" required>

                </div>
                <div class="form-group">
                    <label for="Age">Banker Age </label>
                    <input type="number" class="form-control" placeholder="Enter Your Age Here" id="Age" name="Age" required>
                </div>
                <div class="form-group">
                    <label for="email">Banker Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email No" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder=" Set Password" required>
                </div>
                <button type="submit" class="btn btn-success mt-3 rounded-pill" style="width:100%">Add an Applicant</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
</body>
</html>
