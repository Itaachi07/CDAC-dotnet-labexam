
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signin</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <br />
    <br />
    <div class="row">
        <div class="col"></div>
        <div class="col">

            <form method="post" action="/Login/AfterSignin">
                <div class="d-flex justify-content-center">
                    <h1>Sign in</h1>


                </div>
                <h3>@ViewBag.InvalidMessage</h3>
                <div class="form-group">
                    <label for="UserEmail">Bank Email</label>
                    <input type="text" class="form-control" id="UserEmail" name="UserEmail" placeholder="Enter Your Email Here:">

                </div>
                <hr />
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password">
                </div>

                <button type="submit" class="btn btn-primary rounded-pill mt-5" style="width:100%">Signin</button>
            </form>
        </div>
        <div class="col"></div>
    </div>

</body>
</html>
